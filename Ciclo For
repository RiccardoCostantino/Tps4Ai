<!DOCTYPE html>
<html>
<head>
    <script>
        function addendi() {
            let a = document.getElementById("a").value;
            let risultato = "";
            let b= a;
            for (let i = 0; i <=b; i++) {
                risultato += a + "-" + i + "<br>";
                a--;
            }
            document.getElementById("aD").innerHTML = risultato;
        }
    </script>
</head>
<body>


<label for="a">Inserisci un numero:</label>
<input type="number" id="a" name="a">
<input type="button" value="Cliccami" onclick="addendi()">
<p id="aD"></p>
</body>
</html>
