<!DOCTYPE html>
<html lang="it">
<head>
    <title>Tabella Anagrafica</title>
    <style>
        body {
            font-family: "Times New Roman";
            background-color: #107e02;
        }
        .output {
            margin-top: 40px;
        }
        table {
            width: 100%;
            margin-top: 20px;
            border: 2px double black;
        }
        th, td {
            border: 1px solid #000000;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #1c9609;
        }
        button{
            background-color:#bebebe;
        }
    </style>
</head>
<body>

    <h2>Inserimento Dati</h2>

    <form id="datiForm">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" required><br><br>
        
        <label for="cognome">Cognome:</label>
        <input type="text" id="cognome" required><br><br>

        <label for="sesso">Sesso:</label>
        <input type="text" id="sesso" required><br><br>
        
        <label for="indirizzo">Indirizzo:</label>
        <input type="text" id="indirizzo" required><br><br>
        
        <label for="citta">Città:</label>
        <input type="text" id="citta" required><br><br>

        <label for="cap">CAP:</label>
        <input type="text" id="cap" required><br><br>

        <label for="nazione">Nazione:</label>
        <input type="text" id="nazione" required><br><br>
        
        <button type="button" onclick="aggiungiDati()">Aggiungi Dati</button>
    </form>

    <h2>Lista Dati Inseriti</h2>

    <table id="tabellaDati">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Sesso</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Nazione</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script>
        let dati = [];
        
        function aggiungiDati() {
            let nome = document.getElementById('nome').value;
            let cognome = document.getElementById('cognome').value;
            let sesso = document.getElementById('sesso').value;
            let indirizzo = document.getElementById('indirizzo').value;
            let citta = document.getElementById('citta').value;
            let cap = document.getElementById('cap').value;
            let nazione = document.getElementById('nazione').value;

            if (nome && cognome && sesso && indirizzo && citta && cap && nazione) {
                dati.push([nome, cognome, sesso, indirizzo, citta, cap, nazione]);

                document.getElementById('nome').value = '';
                document.getElementById('cognome').value = '';
                document.getElementById('sesso').value = '';
                document.getElementById('indirizzo').value = '';
                document.getElementById('citta').value = '';
                document.getElementById('cap').value = '';
                document.getElementById('nazione').value = '';
                aggiornaTabella();
            } else {
                alert("Tutti i campi devono essere riempiti!");
            }
        }

        function aggiornaTabella() {
            let tabella = document.getElementById('tabellaDati');
            let tbody = tabella.getElementsByTagName('tbody')[0];

            tbody.innerHTML = '';
            for (let i = 0; i < dati.length; i++) {
                let riga = tbody.insertRow();
                for (let j = 0; j < dati[i].length; j++) {
                    let cella = riga.insertCell(j);
                    cella.textContent = dati[i][j];
                }
            }
        }
    </script>

</body>
</html>
